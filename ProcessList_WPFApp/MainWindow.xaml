<Window x:Class="ProcessList_WPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProcessList_WPFApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Enter Numbers:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="number1TextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,30,0,0" Width="100"/>
        <TextBox x:Name="number2TextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,30,0,0" Width="100"/>
        <TextBlock Text="Enter Operation:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,60,0,0"/>
        <TextBox x:Name="operationTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,80,0,0" Width="100"/>
        <Button Content="Calculate" Click="LaunchProcess_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,110,0,0"/>
        <TextBlock Text="Result:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,150,0,0"/>
        <TextBlock x:Name="resultTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,170,0,0"/>
    </Grid>
</Window>
