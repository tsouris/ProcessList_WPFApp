<Window x:Class="ProcessList_WPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProcessList_WPFApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="processListBox" HorizontalAlignment="Left" Height="400" VerticalAlignment="Top" Width="200" Margin="10,10,0,0"/>
        <TextBox x:Name="selectionTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Margin="220,10,0,0"/>
        <Button Content="View Details" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="280,10,0,0" Click="ViewDetails_Click"/>
        <Button Content="Refresh" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="400 10 0 0" Click="Refresh_Click"/>
        <Button Content="End process" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="520 10 0 0" Click="EndProcess_Click"/>
        <TextBox x:Name="detailsTextBox" HorizontalAlignment="Right" VerticalAlignment="Center" Width="300" Height="300" Margin="0 0 250 0" IsReadOnly="True"/>
    </Grid>
</Window>
